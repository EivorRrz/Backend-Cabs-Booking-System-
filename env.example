# Server Configuration
PORT=6000
NODE_ENV=development

# Database Configuration
DB_CONNECT=mongodb://localhost:27017/cab_booking_enhanced
# For MongoDB Atlas (production):
# DB_CONNECT=mongodb+srv://username:password@cluster.mongodb.net/cab_booking_enhanced

# Redis Configuration (for 37% performance improvement)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_NODES=localhost:6379,localhost:6380,localhost:6381

# Kafka Configuration (for scalability and event streaming)
KAFKA_CLIENT_ID=cab-booking-service
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=cab-booking-group
KAFKA_SSL=false
KAFKA_USERNAME=
KAFKA_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Security Configuration
SESSION_SECRET=your-session-secret-key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log

# Performance Monitoring
PERFORMANCE_MONITORING=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENDPOINT=/health

# Rate Limiting (for 3x scalability)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_RIDE_MAX=20

# Maps & Location Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPS_SERVICE_URL=https://maps.googleapis.com/maps/api

# Payment Integration (Optional)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
PAYMENT_WEBHOOK_SECRET=your-payment-webhook-secret

# SMS & Notifications (Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Email Configuration (Optional)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload (Optional)
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Monitoring & Analytics (Optional)
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
SENTRY_DSN=your-sentry-dsn

# Performance Optimization Settings
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# Database Optimization
DB_MAX_POOL_SIZE=50
DB_MIN_POOL_SIZE=5
DB_MAX_IDLE_TIME_MS=30000
DB_SERVER_SELECTION_TIMEOUT_MS=5000

# Scalability Settings
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000

# Development Settings
ENABLE_CORS=true
ENABLE_SWAGGER=true
SWAGGER_URL=/api-docs
